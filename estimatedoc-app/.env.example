# Azure Deployment Configuration for EstimateDoc
# Copy this file to .env and update with your values

# Azure Resource Configuration
AZURE_RESOURCE_GROUP="Your Resource Group Name"
AZURE_LOCATION="eastus"

# Container Apps Configuration
CONTAINER_ENV_NAME="your-container-env"
CONTAINER_APP_NAME="your-app-name"

# Azure Container Registry
REGISTRY_NAME="yourregistryname"
IMAGE_NAME="estimatedoc"
IMAGE_TAG="latest"

# Custom Domain Configuration
CUSTOM_DOMAIN="your-domain.example.com"

# Optional: Azure Subscription (uncomment if needed)
# AZURE_SUBSCRIPTION_ID="your-subscription-id"

# Resource Sizing (optional - defaults will be used if not set)
CONTAINER_CPU="0.5"
CONTAINER_MEMORY="1.0"
MIN_REPLICAS="1"
MAX_REPLICAS="3"